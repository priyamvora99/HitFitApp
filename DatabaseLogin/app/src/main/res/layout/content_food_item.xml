<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="261dp"
    android:background="@color/white"
    tools:context="com.example.priyam.databaselogin.FoodItem"
    tools:showIn="@layout/activity_food_item">
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/itemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/darkgrey"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="3"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:id="@+id/itemEnergy"
                android:background="@drawable/bckgnd_nutrient"
                android:layout_width="80dp"
                android:gravity="center_horizontal|center_vertical"
                android:layout_height="80dp"
                android:textColor="@color/white"
                />
            <TextView
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:background="@drawable/fiber"
                android:id="@+id/itemProtein"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center_horizontal|center_vertical"
                android:textColor="@color/white"
                />
            <TextView
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:background="@drawable/fats"
                android:id="@+id/itemFats"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:textColor="@color/white"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="3"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
                <TextView
                    android:background="@drawable/carbs"
            android:id="@+id/itemCarbs"
            android:layout_width="80dp"
                    android:gravity="center_horizontal|center_vertical"

                    android:layout_height="80dp"
                    android:layout_weight="1"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/itemFiber"
            android:layout_weight="1"
            android:layout_marginLeft="30dp"
            android:gravity="center_horizontal|center_vertical"
            android:background="@drawable/protein"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/itemSugar"
            android:layout_weight="1"
            android:layout_marginLeft="30dp"
            android:gravity="center_horizontal|center_vertical"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/sugar"
            android:textColor="@color/white"
            />
            </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:orientation="vertical">
    <TextView
        android:layout_weight="1"
        android:text="Note: "
        android:gravity="bottom|center_horizontal"
        android:id="@+id/caution"
        android:textSize="15sp"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <TextView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center_horizontal"
        android:layout_marginBottom="10dp"
        android:text="*These values are for 1 servings."/>
    </LinearLayout>
</LinearLayout>
