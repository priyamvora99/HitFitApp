<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="15dp">
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/totalCal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" of 2450 kcal Eaten !"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:id="@+id/breakfast"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/breakfastT"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Breakfast"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="end">
            <TextView
                android:id="@+id/breakfastE"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:text="0 of 650 kcal"
                android:gravity="center_vertical"
                android:textSize="16sp"/>
            <ImageButton
                android:id="@+id/buttonBreakfast"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:onClick="goToAddItem"
                android:backgroundTint="@color/transparent"
                android:src="@drawable/plus" />
        </LinearLayout>
    </LinearLayout>

        <ListView
                android:id="@+id/listBreakfast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </ListView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/brunch"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/brunchT"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Brunch"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="end">
                <TextView
                    android:id="@+id/brunchE"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:text="0 of 250 kcal"
                    android:gravity="center_vertical"
                    android:textSize="16sp"/>
                <ImageButton
                    android:id="@+id/buttonBrunch"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:onClick="goToAddItem"
                    android:backgroundTint="@color/transparent"
                    android:src="@drawable/plus" />
            </LinearLayout>
        </LinearLayout>

        <ListView
                android:id="@+id/listBrunch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />
    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/lunch"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/lunchT"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Lunch"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="end">
            <TextView
                android:id="@+id/lunchE"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:text="0 of 650 kcal"
                android:gravity="center_vertical"
                android:textSize="16sp"/>
            <ImageButton
                android:id="@+id/buttonLunch"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:onClick="goToAddItem"
                android:backgroundTint="@color/transparent"
                android:src="@drawable/plus" />
        </LinearLayout>
    </LinearLayout>
        <ListView
            android:id="@+id/listLunch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/esnack"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/esnackT"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Evening Snack"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="end">
            <TextView
                android:id="@+id/esnackE"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:text="0 of 250 kcal"
                android:gravity="center_vertical"
                android:textSize="16sp"/>
            <ImageButton
                android:id="@+id/buttonEsnack"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:onClick="goToAddItem"
                android:backgroundTint="@color/transparent"
                android:src="@drawable/plus" />
        </LinearLayout>
    </LinearLayout>
        <ListView
            android:id="@+id/listEsnack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/dinner"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/dinnerT"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Dinner"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="end">
                <TextView
                    android:id="@+id/dinnerE"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:text="0 of 650 kcal"
                    android:gravity="center_vertical"
                    android:textSize="16sp"/>
                <ImageButton
                    android:id="@+id/buttonDinner"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:onClick="goToAddItem"
                    android:backgroundTint="@color/transparent"
                    android:src="@drawable/plus" />
            </LinearLayout>
        </LinearLayout>
            <ListView
                android:layout_width="match_parent"
                android:id="@+id/listDinner"
                android:layout_height="wrap_content">
            </ListView>
    </LinearLayout>
</LinearLayout>
</ScrollView>